# C++20 standard
build --cxxopt=-std=c++20
build --host_cxxopt=-std=c++20

# Enable C++20 modules support (requires GCC 11+ or Clang 16+)
build --experimental_cpp_modules
build --cxxopt=-fmodules-ts

# Warning levels and error handling
build --cxxopt=-Wall
build --cxxopt=-Wextra
build --cxxopt=-Werror

# Optimization for release builds
build:release --compilation_mode=opt
build:release --copt=-O3

# Debug configuration
build:debug --compilation_mode=dbg
build:debug --copt=-g

# Fast build (less optimization)
build:fastbuild --compilation_mode=fastbuild

# Default to fastbuild
build --compilation_mode=fastbuild

# Output options
build --verbose_failures
build --show_timestamps

# Enable platform-specific configuration
build --enable_platform_specific_config

# Linux-specific settings
build:linux --cxxopt=-pthread
build:linux --linkopt=-pthread
